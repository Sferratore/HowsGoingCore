@*Layout applied to all pages.*@

<!DOCTYPE html>
<html lang="en">

<head>
    @*Metadata*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*Title*@
    <title>HowsGoingCore</title>
    @*References (bootstrap, styles)*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/JournalThemeBootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HowsGoingCore.styles.css" asp-append-version="true" />
    @*CDN to use bootstrap icons*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    @*Upper Navbars*@
    <header>
        <nav class="navbar navbar-expand-lg bg-primary py-3 fixed-top" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HowsGoingCore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @*Left navbar*@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Postpage">Post something</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Homepage"> Homepage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Friends">Friends</a>
                        </li>
                    </ul>
                    @*Right navbar*@
                    @if (Context.Session.GetString("LoggedUser") != null)
                    {
                        <ul class="navbar-nav" style="margin-right: 10%">
                            @*Account element with dropdown*@
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" asp-area="" asp-controller="Home" asp-action="Friends">@Context.Session.GetString("LoggedUser")</a>
                                <div class="dropdown-menu" style="">
                                    <h6 class="dropdown-header">Your profile</h6>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                                </div>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    @*Container*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*Footer*@
    <footer class="personalizedFooter border-top text-center text-lg-start fixed-bottom">
        <div class="container">
            &copy; 2023 - HowsGoingCore - <a href="www.linkedin.com/in/francesco-paolo-sferratore">Created by Sferratore</a>
        </div>
    </footer>

    @*Script import*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
